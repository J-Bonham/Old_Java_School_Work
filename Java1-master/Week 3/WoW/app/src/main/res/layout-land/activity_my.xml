<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <ListView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:id="@+id/listofgames"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nameheader"
        android:id="@+id/nameheader"
        android:textSize="18dp"
        android:layout_toEndOf="@+id/listofgames"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/listofgames" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warcraft"
        android:id="@+id/name"
        android:textSize="22dp"
        android:paddingTop="10dp"
        android:layout_below="@+id/nameheader"
        android:layout_toRightOf="@+id/listofgames"
        android:layout_toEndOf="@+id/listofgames" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/releaseheader"
        android:id="@+id/releaseheader"
        android:textSize="18dp"
        android:paddingTop="14dp"
        android:layout_toEndOf="@+id/listofgames"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/listofgames"
        android:layout_alignRight="@+id/nameheader"
        android:layout_alignEnd="@+id/nameheader" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2004"
        android:textSize="22dp"
        android:paddingTop="10dp"
        android:id="@+id/release"
        android:layout_alignBottom="@+id/releaseheader"
        android:layout_toRightOf="@+id/releaseheader" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lvlcapheader"
        android:id="@+id/textView"
        android:textSize="18dp"
        android:paddingTop="14dp"
        android:layout_toEndOf="@+id/listofgames"
        android:layout_below="@+id/release"
        android:layout_toStartOf="@+id/release"
        android:layout_alignRight="@+id/releaseheader"
        android:layout_alignEnd="@+id/releaseheader" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60"
        android:textSize="22dp"
        android:paddingTop="10dp"
        android:id="@+id/level"
        android:layout_toEndOf="@+id/name"
        android:layout_below="@+id/release"
        android:layout_toRightOf="@+id/releaseheader" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/featureheader"
        android:id="@+id/textView2"
        android:textSize="18dp"
        android:paddingTop="10dp"

        android:layout_toEndOf="@+id/listofgames"
        android:layout_toStartOf="@+id/level"
        android:layout_below="@+id/level"
        android:layout_toRightOf="@+id/listofgames" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Original Release"
        android:id="@+id/features"
        android:textSize="22dp"
        android:paddingTop="8dp"
        android:layout_toEndOf="@+id/listofgames"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/listofgames" />


</RelativeLayout>
